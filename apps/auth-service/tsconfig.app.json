{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "out-tsc/auth-service",
    "types": ["node", "express"],
    "rootDir": "../../",
    "tsBuildInfoFile": "out-tsc/auth-service/tsconfig.app.tsbuildinfo",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "../../packages/**/*.ts",
    "src/swagger-output.json"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
